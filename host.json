{
    "version": "2.0",
    "logging": {
        "applicationInsights": {
            "samplingSettings": {
                "isEnabled": true,
                "excludedTypes": "Request"
            },
            "enableLiveMetricsFilters": true
        }
    },
    "extensions": {
        "http": {
            "routePrefix": "api"
        }
    },
    "host": {
        "cors": {
            "allowedOrigins": [
                "http://localhost:3000",
                "http://localhost:5173",
                "http://127.0.0.1:3000",
                "http://127.0.0.1:5173",
                "*"
            ],
            "allowedMethods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "OPTIONS"
            ],
            "allowedHeaders": [
                "Content-Type",
                "Authorization",
                "x-api-key",
                "x-requested-with",
                "accept",
                "origin",
                "access-control-allow-origin",
                "access-control-allow-headers"
            ],
            "allowCredentials": false
        }
    }
}